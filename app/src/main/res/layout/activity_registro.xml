<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="garden.system.photo.Registro">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        android:elevation="4dp"
        app:cardCornerRadius="5dp"
        android:outlineAmbientShadowColor="@color/teal_200"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="74dp"
                    android:layout_marginEnd="74dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/logopre" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardUseCompatPadding="true"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:background="@drawable/buttontest"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/black"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/lblHeadCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="19dp"
                        android:text="Ingresa tus credenciles"
                        android:textAlignment="center"
                        android:textSize="40dp"
                        android:paddingTop="5dp"
                        android:padding="1dp"
                        android:textColor="@color/white"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/matCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:startIconDrawable="@drawable/user_24"
                android:visibility="visible"
                >

                <EditText
                    android:id="@+id/txtCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Codigo">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/matPass"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="4dp"-->
<!--                app:startIconDrawable="@drawable/lock_24"-->
<!--                android:visibility="visible"-->
<!--                >-->

<!--                <EditText-->
<!--                    android:id="@+id/txtPass"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:hint="ContraseÃ±a"-->
<!--                    android:inputType="textPassword"-->
<!--                    >-->

<!--                </EditText>-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/matApikey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:visibility="visible"
                app:startIconDrawable="@drawable/key_24"
                >

                <EditText
                    android:id="@+id/txtApikey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Clave de acceso"
                    android:inputType="text"
                    >

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnSingUp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/buttontest"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Registrar"
                android:drawableLeft="@drawable/white_save_24"
                >
            </Button>

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="#FF5C26"
                android:textSize="20dp"
                android:layout_margin="4dp"
                android:layout_marginTop="5dp"
                android:outlineProvider="background"
                android:outlineSpotShadowColor="@color/teal_700"
                android:text="Borrar credenciales"
                android:textAlignment="center"
                android:drawableLeft="@drawable/delete_24"
                android:drawableTint="#FF5C26"
                >
            </Button>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>