<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Login"
    android:background="@color/cardview_shadow_end_color">

<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal"-->
<!--        >-->

<!--        -->
<!--    </RelativeLayout>-->


    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        android:elevation="4dp"
        app:cardCornerRadius="5dp"
        android:outlineAmbientShadowColor="@color/teal_200"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="74dp"
                    android:layout_marginEnd="74dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/logopre" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardUseCompatPadding="true"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:background="@drawable/buttontest"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/black"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/lblHeadCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="19dp"
                        android:text="Ingresa tus credenciles"
                        android:textAlignment="center"
                        android:textSize="40dp"
                        android:paddingTop="5dp"
                        android:padding="1dp"
                        android:textColor="@color/white"
                        >

                    </TextView>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                >

                <EditText
                    android:id="@+id/txtCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Code">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                >

                <EditText
                    android:id="@+id/txtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/materialCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:visibility="gone"
                >

                <EditText
                    android:id="@+id/txtCampoExtra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Campo extra"
                    android:inputType="text"
                    >

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttontest"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Regisrar"
                >

            </Button>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lblfecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hora: ">

    </TextView>
    <TextView
        android:id="@+id/lblhora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fecha: ">

    </TextView>
    <TextView
        android:id="@+id/lblLatLong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ubi: ">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardConf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnFloat"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:elevation="4dp"
            android:outlineAmbientShadowColor="@color/teal_200"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="5dp">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/chkCredenciales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar credenciales">


                </com.google.android.material.checkbox.MaterialCheckBox>


                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/chkCampoExtra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar campo extra">

                </com.google.android.material.checkbox.MaterialCheckBox>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFloat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right|bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#FF8000"
            android:src="@drawable/settings"
            >


        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFloatAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#FFF"
            android:src="@drawable/ic_baseline_help_outline_24"
            android:foregroundGravity="left|bottom">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/btnFloatAyuda"
            android:text=" Â© Garden System">

        </TextView>

    </RelativeLayout>

</LinearLayout>